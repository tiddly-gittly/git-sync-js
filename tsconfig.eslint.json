{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.jsx",
    "public/**/*.ts",
    "public/**/*.js",
    "test/**/*.ts",
    "scripts/**/*.ts",
    "scripts/**/*.js",
    "scripts/**/*.mjs",
    "src/**/*.d.ts",
    "public/**/*.d.ts",
    "./*.json",
    "./*.js",
    "./*.ts",
    "./*.*.js"
  ],
  "exclude": ["template/**/*.js", "src/services/libs/i18n/i18next-electron-fs-backend.ts"]
}
